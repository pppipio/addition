#include <iostream>
using namespace std;
int find(int a[][5], int *rowp, int *colp)
{
	int i, j, flag, max, maxj;
	for (i = 0; i<4; i++)
	{
		max = a[i][0];
		maxj = 0;
		for (j = 1; j<5; j++)
		if (a[i][j]>max)
		{
			*rowp = i;
			*colp = j;
			max = a[i][j]; maxj = j;
		}
		flag = 1;
		for (int k = 0; k<4; k++)
		if (a[k][maxj]<max)
		{
			flag = 0;
			break;
		}
		if (flag) 
			return(1);
	}
	return(0);
}
int main()
{
	int a[4][5] = { { 2, 8, 3, 4, 7 }, { 5, 6, 5, 5, 1 }, { 5, 7, 6, 7, 3 }, { 1, 9, 2, 7, 5 } }, i, j;
	for (i = 0; i<4; i++)
	{
		for (j = 0; j<5; j++)
			cout<< a[i][j] << '\t';
		cout<<endl;
	}
	cout<<endl;
	if (find(a, &i, &j))
		cout<< "a[" <<i<< "][" << j << "]\n";
	else
		cout<< "Can't found!\n";
	return 0;
}
