#include<iostream>
using namespace std;
int average1(int a[3])
{
	int A; 
    A=(a[0]+a[1]+a[2])/3;
}
int average2(int b[3])
{
	int B;
    B=(b[0]=b[1]+b[2])/3;
}
int average3(int c[3])
{
	int C;
	C=(c[0]+c[1]+c[2])/3;
}
int average4(int d[3])
{
	int D;
	D=(d[0]+d[1]+d[2])/3;
} 
int main()
{
	int a[3]={89,78,56};
	int b[3]={88,99,100};
	int c[3]={72,80,61};
	int d[3]={60,70,75};
	int A,B,C,D;
	A=average1(a);
	B=average2(b);
	C=average3(c);
	D=average4(d);
	cout<<"学生1的个人平均分为："<<A<<endl;
	cout<<"学生2的个人平均分为："<<B<<endl;
	cout<<"学生3的个人平均分为："<<C<<endl;
	cout<<"学生4的个人平均分为："<<D<<endl;
	system("pause");
	return 0;
} 
