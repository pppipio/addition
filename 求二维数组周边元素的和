#include<iostream>
using namespace std;
int fun(int a[100][100]);
int main()
{
  int a[100][100];
  int i, j, m, n;
  int sum=0;
cout<<"请输入二维数组的行数："<<endl;
cin>>m;
cout<<"请输入二维数组的列数："<<endl;
cin>>n; 
cout<<"请输入一个二维数组："<<endl;
  for(i=0;i<m;i++)
  for(j=0;j<n;j++)
  {
cin>>a[i][j];
	if(i==0||i==m-1||((j==0)&&(i!=0)&&(i!=m-1))||((j==n-1)&&(i!=0)&&(i!=m-1)))
	sum+=a[i][j];
  }
cout<<"该数组周边元素之和为："<<sum<<endl;
  return 0;
  }
