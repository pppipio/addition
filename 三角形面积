#include<iomanip>
using namespace std;
int main()
{
	float a, b, c , Area ,s;
	cout << "a=" ;
	cin >> a ;
	cout << "b=";
	cin >> b;
	cout <<"c=";
	cin >> c;
	s = (a + b + c) / 2;
	cout << "s=" << s <<endl;
	Area = sqrt(s*(s - a) * (s - b)*(s - c));
	cout << "Area=" <<setiosflags(ios::fixed)<<setprecision(2)<< Area << endl;
	system("pause");
	return 0;
}
