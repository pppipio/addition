#include<iostream>
using namespace std;
int main()
{
    int i, j;
    i=1;
    i<=7;
    while(i<=4)
    {
        for(j=1;j<=i-1;j++)
        cout<<" ";
        for(j=1;j<=2*(4-i)+1;j++)
        cout<<"*";
        cout<<endl;
        i++;
    }
    while(i>=5&&i<=7)
    {
        for(j=1;j<=7-i;j++)
        cout<<" ";
        for(j=1;j<=2*(i-4)+1;j++)
        cout<<"*";
        cout<<endl;
        i++;
    }
    return 0;
}
